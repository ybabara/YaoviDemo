<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.yaovi.yaovidemo">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:name=".YaoviApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ListViewActivity" />
        <activity android:name=".ViewPagerActivity" />
        <activity android:name=".BaseActivity" />
        <activity android:name=".DialogActivity" />
        <activity android:name=".AnimationActivity" />
        <activity
            android:name=".ActivityA"
            android:launchMode="standard" />
        <activity
            android:name=".ActivityB"
            android:launchMode="singleTop" />
        <activity
            android:name=".ActivityC"
            android:launchMode="singleTask" />
        <activity
            android:name=".ActivityD"
            android:launchMode="singleInstance" />
        <activity android:name=".AnimatorActivity" />
        <activity android:name=".Quiz4" />
        <activity android:name=".Cups" />
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login" />
        <activity android:name=".CardList" />
        <activity android:name=".Checkbox"></activity>
    </application>

</manifest>